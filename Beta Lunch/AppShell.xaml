<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Beta_Lunch.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Beta_Lunch"
    Shell.FlyoutBehavior="Disabled">

    <!-- PANTALLA DE INICIO DESPUÉS DEL LOGIN -->
    <ShellContent
        Title="Inicio"
        ContentTemplate="{DataTemplate local:HomePage}"
        Route="HomePage" />

    <!-- MENÚ -->
    <ShellContent
        Title="Menú"
        ContentTemplate="{DataTemplate local:MenuPage}"
        Route="MenuPage" />

    <!-- PERFIL -->
    <ShellContent
        Title="Perfil"
        ContentTemplate="{DataTemplate local:PerfilPage}"
        Route="PerfilPage" />

    <!-- HISTORIAL -->
    <ShellContent
        Title="Historial"
        ContentTemplate="{DataTemplate local:HistorialPage}"
        Route="HistorialPage" />

    <!-- FLUJO DEL PEDIDO -->
    <ShellContent Route="PedidoTerminadoPage"
                  ContentTemplate="{DataTemplate local:PedidoTerminadoPage}" />

    <ShellContent Route="PedidoEnCaminoPage"
                  ContentTemplate="{DataTemplate local:PedidoEnCaminoPage}" />

    <ShellContent Route="PedidoEntregadoPage"
                  ContentTemplate="{DataTemplate local:PedidoEntregadoPage}" />

</Shell>

