<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Beta_Lunch.HistorialPage"
             Title="Historial">

    <VerticalStackLayout Padding="20" Spacing="20">

        <Label Text="Historial de Pedidos"
               FontSize="28"
               FontAttributes="Bold"
               HorizontalOptions="Center"/>

        <CollectionView x:Name="ListaHistorial"
                        ItemsSource="{Binding Pedidos}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" BackgroundColor="#EEEEEE">
                        <VerticalStackLayout>
                            <Label Text="{Binding Fecha}" FontAttributes="Bold"/>
                            <Label Text="{Binding Detalle}"/>
                            <Label Text="{Binding Total}" TextColor="Green"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
