<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Beta_Lunch.HomePage"
             Title="Inicio">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25">

            <Label Text="Bienvenido"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <!-- BOTÓN MENÚ -->
            <Button Text="Ir al Menú"
                    HeightRequest="60"
                    CornerRadius="12"
                    BackgroundColor="#B39DDB"
                    TextColor="Black"
                    Clicked="GoMenu"/>

            <!-- BOTÓN PERFIL -->
            <Button Text="Mi Perfil"
                    HeightRequest="60"
                    CornerRadius="12"
                    BackgroundColor="#B39DDB"
                    TextColor="Black"
                    Clicked="GoPerfil"/>

            <!-- BOTÓN HISTORIAL -->
            <Button Text="Historial de Pedidos"
                    HeightRequest="60"
                    CornerRadius="12"
                    BackgroundColor="#B39DDB"
                    TextColor="Black"
                    Clicked="GoHistorial"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
